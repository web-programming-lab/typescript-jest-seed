{
  "name": "typescript-jest-seed",
  "version": "0.0.1",
  "description": "A simple Node/TypeScript seed with test and watch support.",
  "main": "src/app.ts",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./build/app.js",
    "test": "jest",
    "predev": "npm run clean",
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "prenodemon": "wait-on ./build/app.js",
    "nodemon": "nodemon --delay 1500ms \"./build/app.js\"",
    "tsc-watch": "tsc -w",
    "lint": "tsc --noEmit && eslint \"*/**/*.{js,ts}\" --quiet --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "concurrently": "^3.1.0",
    "eslint": "^5.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "rimraf": "^2.7.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.7",
    "wait-on": "^1.5.3"
  }
}
